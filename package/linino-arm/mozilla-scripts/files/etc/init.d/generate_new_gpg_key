#!/bin/sh /etc/rc.common
# Copyright (C) 2008 OpenWrt.org

START=49

start() {
	[ -e /etc/mozilla/mozilla_gpg.asc ] && echo "nothing to do !" && exit 0
	logger -t gpg "Generating GPG key..."
	/usr/bin/gpg --batch --gen-key /etc/mozilla/gpg_gen_key_batch
	logger -t gpg "GPG key generated. Exporting key as ascii text file..."
	rm -f /etc/mozilla/mozilla_gpg.asc
	/usr/bin/gpg --no-default-keyring --secret-keyring /etc/mozilla/mozilla_gpg.sec --keyring /etc/mozilla/mozilla_gpg.pub --export --armor --output /etc/mozilla/mozilla_gpg.asc
	logger -t gpg "GPG key exported"
}
